{
	"compilerOptions": {
		"module": "ES2022",
        "strict": false,
		"lib": [
			"ES6"
		],
		"rootDirs": [
			"./src"
		],
		"outDir": "./build",
		"allowJs": true,
		"target": "es2018",
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"strictNullChecks": true,
	},
	"include": [
		"./src/**/*",
	],
	"exclude": [
		"node_modules"
	],
}